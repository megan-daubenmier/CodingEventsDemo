@model List<CodingEventsDemo.Models.Event>

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>


<p>
    <a asp-controller="Events" asp-action="Delete">Delete Event</a>
</p>

@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Location
            </th>
            <th>
                Description
            </th>
            <th>
                Number of Attendees
            </th>
            <th>
                Registration Required?
            </th>
            <th>
                Contact Email
            </th>
        </tr>
        @foreach (var evt in Model)
        {
            <tr>
                <td>@evt.Id</td>
                <td>@evt.Name</td>
                <td>@evt.Location</td>
                <td>@evt.Description</td>
                <td>@evt.NumAttendees</td>
                <td>@evt.IsRegistrationRequired</td>
                <td>@evt.ContactEmail</td>
            </tr>
        }
    </table>
}

